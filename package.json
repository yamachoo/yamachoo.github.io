{
  "name": "yamachoo.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next export",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore --cache .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint": "run-p lint:*",
    "fix:eslint": "npm run lint:eslint --fix",
    "fix:prettier": "prettier --ignore-path .gitignore --write .",
    "fix": "run-s fix:*"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --ignore-path .gitignore --cache --fix",
    "*.{js,ts,jsx,tsx,css,md,json}": "prettier --ignore-path .gitignore --write"
  },
  "dependencies": {
    "next": "10.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "autoprefixer": "10.2.5",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.23.2",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.12",
    "prettier": "2.2.1",
    "tailwindcss": "2.1.2",
    "typescript": "4.2.4"
  }
}
